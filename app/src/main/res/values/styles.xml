<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextViewTitles">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="TextViewPlayerTitle">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">start</item>
    </style>
    <style name="TextViewTitles.ItemPrimaryTitle" parent="TextViewTitles">
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
    <style name="TextViewTitles.ItemSecondaryTitle" parent="TextViewTitles">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
    <style name="TextViewTitles.ItemLargeTitle">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Layouts -->
    <style name="TextContainer">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/spacer_small</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="ClickableLayout">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <!-- CardStyle -->
    <style name="AppCardViewStyle" parent="CardView">
        <item name="android:backgroundTint">@color/grey_20</item>
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">@dimen/corner_radius_medium</item>
    </style>
    <style name="ThumbnailSmallCard">
        <item name="android:layout_width">@dimen/thumbnail_small_plus</item>
        <item name="android:layout_height">@dimen/thumbnail_small_plus</item>
        <item name="cardCornerRadius">@dimen/corner_radius_small</item>
    </style>
    <style name="ThumbnailMediumCard">
        <item name="android:layout_width">@dimen/thumbnail_medium</item>
        <item name="android:layout_height">@dimen/thumbnail_medium</item>
        <item name="cardCornerRadius">@dimen/corner_radius_small</item>
    </style>

    <!-- ToolBar -->
    <style name="AppToolBar" parent="Widget.AppCompat.Toolbar">
        <item name="background">?android:attr/windowBackground</item>
    </style>
    <style name="SearchBar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@null</item>
        <item name="android:hint">@string/search</item>
        <item name="android:maxLines">1</item>

    </style>

    <!-- Buttons -->
    <style name="BaseImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:backgroundTint">@color/transparent</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:padding">0dp</item>
    </style>
    <style name="ToolBarButton">
        <item name="android:layout_width">@dimen/icon_medium_plus</item>
        <item name="android:layout_height">@dimen/icon_medium_plus</item>
        <item name="android:padding">10dp</item>
    </style>

    <!-- Separator -->
    <style name="separator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/bg_separator</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Material3.BottomSheet">
        <item name="paddingBottomSystemWindowInsets">false</item>
        <item name="android:maxWidth">@empty</item>
        <item name="shapeAppearance">?attr/shapeAppearanceCornerExtraSmall</item>
    </style>
    <style name="BottomSheetMenu"
        parent="Widget.Material3.BottomSheet">
    </style>
</resources>