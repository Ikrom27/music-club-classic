<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Text -->
    <style name="TextStartAlign">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">start</item>
    </style>

    <!-- PlaceHolders -->
    <style name="PlaceHolderTitle">
        <item name="android:textAppearance">@style/TitleExtraLarge</item>
        <item name="android:textColor">@color/placeholder</item>
        <item name="android:layout_marginTop">@dimen/spacer_medium</item>
    </style>
    <style name="PlaceHolderDescription">
        <item name="android:textAppearance">@style/TextMediumPlus</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/placeholder</item>
        <item name="android:layout_marginTop">@dimen/spacer_small_extra</item>
    </style>

    <!-- Layouts -->
    <style name="LayoutTextContainer">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/spacer_small</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="LayoutClickable">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <!-- CardStyle -->
    <style name="CardBase" parent="CardView">
        <item name="android:backgroundTint">@color/grey_20</item>
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">@dimen/corner_radius_medium</item>
    </style>
    <style name="CardThumbnailSmall" parent="CardBase">
        <item name="android:layout_width">@dimen/thumbnail_small_plus</item>
        <item name="android:layout_height">@dimen/thumbnail_small_plus</item>
        <item name="cardCornerRadius">@dimen/corner_radius_small</item>
    </style>
    <style name="CardThumbnailMedium" parent="CardBase">
        <item name="android:layout_width">@dimen/thumbnail_medium</item>
        <item name="android:layout_height">@dimen/thumbnail_medium</item>
        <item name="cardCornerRadius">@dimen/corner_radius_small</item>
    </style>
    <style name="CardThumbnailMediumPlus" parent="CardBase">
        <item name="android:layout_width">@dimen/thumbnail_medium_plus</item>
        <item name="android:layout_height">@dimen/thumbnail_medium_plus</item>
        <item name="cardCornerRadius">@dimen/corner_radius_small</item>
    </style>
    <style name="CardThumbnailLarge" parent="CardBase">
        <item name="android:layout_width">@dimen/thumbnail_large</item>
        <item name="android:layout_height">@dimen/thumbnail_large</item>
        <item name="cardCornerRadius">@dimen/corner_radius_large</item>
    </style>

    <!-- ToolBar -->
    <style name="AppToolBar" parent="Widget.AppCompat.Toolbar">
        <item name="background">?android:attr/windowBackground</item>
    </style>
    <style name="SearchBar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@null</item>
        <item name="android:hint">@string/search</item>
        <item name="android:maxLines">1</item>
    </style>

    <!-- Buttons -->
    <style name="ImageButtonBase" parent="Widget.AppCompat.ImageButton">
        <item name="android:backgroundTint">@color/transparent</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_height">18dp</item>
        <item name="android:layout_width">18dp</item>
        <item name="android:padding">0dp</item>
    </style>
    <style name="ToolBarButton">
        <item name="android:layout_width">@dimen/icon_medium_plus</item>
        <item name="android:layout_height">@dimen/icon_medium_plus</item>
        <item name="android:padding">10dp</item>
    </style>

    <!-- Separator -->
    <style name="separator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/bg_separator</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Material3.BottomSheet">
        <item name="paddingBottomSystemWindowInsets">false</item>
        <item name="android:maxWidth">@empty</item>
        <item name="shapeAppearance">?attr/shapeAppearanceCornerExtraSmall</item>
    </style>
    <style name="BottomSheetMenu"
        parent="Widget.Material3.BottomSheet">
    </style>
</resources>