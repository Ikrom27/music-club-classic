<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextViewTitles">
        <item name="maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="TextViewTitles.ItemPrimaryTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
    <style name="TextViewTitles.ItemSecondaryTitle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
    <style name="TextViewTitles.ItemLargeTitle">
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- CardStyle -->
    <style name="AppCardViewStyle" parent="CardView">
        <item name="cardBackgroundColor">@color/grey_20</item>
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">@dimen/corner_radius_medium</item>
    </style>

    <!-- ToolBar -->
    <style name="AppToolBar" parent="Widget.AppCompat.Toolbar">
        <item name="background">?android:attr/windowBackground</item>
    </style>
</resources>